<%= turbo_frame_tag tag do %>
  <%= form_with model: book do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.submit "#{action} Book" %>
  <% end %>
  <%= link_to "Cancel", books_path, class: "button" %>
<% end %>
