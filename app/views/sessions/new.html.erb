<% content_for :title, "Sign in" %>
<div class="auth-form">
  <%= form_with url: session_path do |form| %>
    <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your username or email address", value: params[:username] %><br>
    <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password" %><br>
    <%= form.submit "Sign in" %>
  <% end %>
  <br>

  <%= link_to "Forgot password?", new_password_path %>
  <p>Don't have an account? <%= link_to "Sign up", new_registration_path %></p>
</div>
